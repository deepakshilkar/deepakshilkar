{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "layout",
          "name": "layout",
          "type": "string"
        },
        {
          "title": "permalink",
          "name": "permalink",
          "type": "string"
        },
        {
          "title": "title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "excerpt",
          "name": "excerpt",
          "type": "string"
        },
        {
          "title": "author_profile",
          "name": "author_profile",
          "type": "boolean"
        },
        {
          "title": "date",
          "name": "date",
          "type": "datetime"
        },
        {
          "title": "comments",
          "name": "comments",
          "type": "boolean"
        },
        {
          "title": "classes",
          "name": "classes",
          "type": "string"
        },
        {
          "title": "read_time",
          "name": "read_time",
          "type": "boolean"
        },
        {
          "title": "share",
          "name": "share",
          "type": "boolean"
        },
        {
          "title": "related",
          "name": "related",
          "type": "boolean"
        },
        {
          "title": "categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "keywords",
          "name": "keywords",
          "type": "choice",
          "choices": [
            "confirmation bias",
            "expertise",
            "critical thinking",
            "epistemology",
            "intellectual standards"
          ]
        }
      ]
    }
  ],
  "frontMatter.framework.id": "hugo",
  "frontMatter.content.publicFolder": "static",
  "frontMatter.preview.host": "http://localhost:1313",
  "frontMatter.content.pageFolders": [
    {
      "title": "content",
      "path": "[[workspace]]/content"
    }
  ]
}